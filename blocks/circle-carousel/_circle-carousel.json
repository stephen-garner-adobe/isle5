{
  "definitions": [
    {
      "title": "Circle Carousel",
      "id": "circle-carousel",
      "plugins": {
        "da": {
          "name": "circle-carousel",
          "rows": 8,
          "columns": 2,
          "behaviour": "columns"
        }
      }
    },
    {
      "title": "Circle Carousel Item",
      "id": "circle-carousel-item",
      "plugins": {
        "da": {
          "name": "circle-carousel-item",
          "behaviour": "columns-row"
        }
      }
    },
    {
      "title": "Circle Carousel Cell",
      "id": "circle-carousel-cell",
      "plugins": {
        "da": {
          "unsafeHTML": "<div></div>",
          "behaviour": "columns-cell"
        }
      }
    }
  ],
  "models": [
    {
      "id": "circle-carousel",
      "fields": [
        {
          "component": "select",
          "valueType": "string",
          "name": "alignment",
          "label": "Alignment",
          "description": "Horizontal alignment of the carousel",
          "value": "center",
          "required": false,
          "options": [
            {
              "name": "Left",
              "value": "left"
            },
            {
              "name": "Center",
              "value": "center"
            },
            {
              "name": "Right",
              "value": "right"
            }
          ]
        },
        {
          "component": "boolean",
          "valueType": "boolean",
          "name": "autoplay",
          "label": "Enable Autoplay",
          "description": "Automatically cycle through items every 4 seconds",
          "value": true,
          "required": false
        },
        {
          "component": "number",
          "valueType": "number",
          "name": "itemsMobile",
          "label": "Items Per View (Mobile)",
          "description": "Number of circles visible on mobile screens",
          "value": 2,
          "required": false,
          "validation": {
            "numberMin": 1,
            "numberMax": 4
          }
        },
        {
          "component": "number",
          "valueType": "number",
          "name": "itemsTablet",
          "label": "Items Per View (Tablet)",
          "description": "Number of circles visible on tablet screens",
          "value": 4,
          "required": false,
          "validation": {
            "numberMin": 2,
            "numberMax": 6
          }
        },
        {
          "component": "number",
          "valueType": "number",
          "name": "itemsDesktop",
          "label": "Items Per View (Desktop)",
          "description": "Number of circles visible on desktop screens",
          "value": 6,
          "required": false,
          "validation": {
            "numberMin": 3,
            "numberMax": 8
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "circle-carousel",
      "components": [
        "circle-carousel-item"
      ]
    },
    {
      "id": "circle-carousel-item",
      "components": []
    },
    {
      "id": "circle-carousel-cell",
      "components": [
        "text",
        "image"
      ]
    }
  ]
}
